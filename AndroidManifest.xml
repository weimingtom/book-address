<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.charmmy.activity"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".MainTabActivity"
                  android:label="@string/app_name"
                  android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".ContactEditActivity"
			android:windowSoftInputMode="adjustResize|stateHidden"
         />
          <activity android:name=".RecentContactActivity"
			android:windowSoftInputMode="adjustPan"
         />
          <activity android:name=".ContactBookActivity"
			android:windowSoftInputMode="adjustPan"
         >
         </activity>
          <activity android:name=".SmsMessageActivity"
			android:windowSoftInputMode="adjustPan"
         />
          <activity android:name=".SettingActivity"
			android:windowSoftInputMode="adjustPan"
         />
    </application>
    
    <uses-permission android:name="android.permission.CALL_PHONE"/>
</manifest>