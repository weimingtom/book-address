<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/rl_root"
	  android:layout_width="wrap_content" 
	  android:layout_height="wrap_content"
	  android:background="#ffffff">
	<TextView 
			android:id="@+id/contactEdit"
	   		android:layout_width="fill_parent"
			android:layout_height="45dip"
			android:background="@drawable/header_bg"
			android:text="新建联系人"
			android:textColor="#fcfdfe"
			android:paddingLeft="15dip"
			android:textSize="18sp"
			android:gravity="left|center"
	   />  
	<ScrollView
			 android:layout_below="@id/contactEdit"
			 xmlns:android="http://schemas.android.com/apk/res/android"  
			 android:id="@+id/ScrollView" 
			 android:layout_width="fill_parent" 
			 android:layout_height="wrap_content"
			 android:layout_marginBottom="40dip" 
			 android:scrollbars="vertical"
			 android:background="#f0f5f8"
			>
	<LinearLayout 
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:paddingRight="20dip"
			android:paddingLeft="20dip"
			>
		<!-- 头像和姓名 -->
		<LinearLayout 
			android:layout_below="@id/contactEdit"
			android:orientation="horizontal"
			android:layout_marginTop="12dip"
			android:layout_marginBottom="6dip"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<!-- 头像 -->
			<FrameLayout 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>
			  <ImageView 
					android:layout_width="80dip"
					android:layout_height="80dip"
					android:src="@drawable/bg_photo_default"
				/>
				
			   <ImageButton
			   		android:id="@+id/photoEdit"
			   		android:layout_width="80dip"
					android:layout_height="80dip"
					android:background="@drawable/bg_contact_edit_photo"
			   />
			</FrameLayout>
			<!-- 姓名 -->
			<EditText 
				android:layout_width="fill_parent"
				android:layout_height="36dip"
				android:background="@drawable/contact_edit_edittext"
				android:paddingLeft="8dip"
				android:paddingTop="3dip"
				android:paddingBottom="3dip"
				android:layout_marginLeft="10dip"
				android:textColorHint="#AAAAAA"
				android:textSize="15dip"
				android:layout_gravity="center"
				android:singleLine="true"
				android:hint="请输入姓名"
			/>
		</LinearLayout>
		
		<EditText 
				android:layout_width="match_parent"
				android:layout_height="36dip"
				android:background="@drawable/contact_edit_edittext"
				android:padding="5dip"
				android:layout_marginTop="6dip"
				android:layout_marginBottom="6dip"
				android:textColorHint="#AAAAAA"
				android:textSize="15dip"
				android:singleLine="true"
				android:inputType="number"
				android:hint="请输入手机号码"
			/>
		<EditText 
				android:layout_width="match_parent"
				android:layout_height="36dip"
				android:background="@drawable/contact_edit_edittext"
				android:padding="5dip"
				android:layout_marginTop="6dip"
				android:layout_marginBottom="6dip"
				android:textColorHint="#AAAAAA"
				android:textSize="15dip"
				android:singleLine="true"
				android:inputType="number"
				android:hint="请输入电话号码"
			/>
		<EditText 
				android:layout_width="match_parent"
				android:layout_height="36dip"
				android:background="@drawable/contact_edit_edittext"
				android:padding="5dip"
				android:layout_marginTop="6dip"
				android:layout_marginBottom="6dip"
				android:textColorHint="#AAAAAA"
				android:textSize="15dip"
				android:singleLine="true"
				android:hint="请输入电子邮件 "
			/>
		<EditText 
				android:layout_width="match_parent"
				android:layout_height="36dip"
				android:background="@drawable/contact_edit_edittext"
				android:padding="5dip"
				android:layout_marginTop="6dip"
				android:layout_marginBottom="6dip"
				android:textColorHint="#AAAAAA"
				android:textSize="15dip"
				android:singleLine="true"
				android:hint="请输入地址 "
			/>
		<EditText 
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/contact_edit_edittext"
				android:padding="5dip"
				android:layout_marginTop="6dip"
				android:layout_marginBottom="16dip"
				android:textColorHint="#AAAAAA"
				android:textSize="15dip"
				android:singleLine="false"
				android:gravity="left|top"
				android:minLines="3"
				 android:maxLines="7"
				android:hint="请输入备注 "
			/>

	</LinearLayout>
	</ScrollView>
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="5dip"
		android:background="@drawable/bg_contact_edit_border"
		android:layout_alignParentBottom="true"
	>
		<Button 
			android:id="@+id/btnSave"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/normal_btn_pressed"
			android:text="保存"
			android:textSize="18sp"
			android:layout_weight="1"
		/>
		<Button 
			android:id="@+id/btnCancel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/normal_btn_pressed"
			android:text="取消"
			android:textSize="18sp"
			android:layout_weight="1"
		/>
	</LinearLayout>
</RelativeLayout>