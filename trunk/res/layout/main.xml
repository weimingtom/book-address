<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	 xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="wrap_content" 
	  android:layout_height="wrap_content"
	  android:background="#ffffff">
	<ViewStub 
		android:id="@+id/lastContactViewStub"  
		android:layout="@layout/last_contact"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
	/>
	<ViewStub 
		android:id="@+id/contactViewStub"  
		android:layout="@layout/contact"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
	/>
	
	<ViewStub 
		android:id="@+id/smsMessageViewStub"  
		android:layout="@layout/sms_message"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
	/>
	
	<ViewStub 
		android:id="@+id/settingViewStub"  
		android:layout="@layout/setting"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
	/>
	<!-- bottom tab (bottom_tab)-->
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="54dip"
		android:orientation="horizontal"
		android:layout_gravity="bottom"
		android:background="@drawable/bg_tab_pressed"
		android:layout_alignParentBottom="true"
		>
		<include
	        android:visibility="visible"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        layout="@layout/bottom_tab"
	        />
	</FrameLayout>
</RelativeLayout>
